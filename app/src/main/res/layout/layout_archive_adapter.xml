<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:paddingLeft="10dp"
    android:paddingBottom="6dp"
    android:paddingRight="10dp"

    >
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <View
            android:layout_width="2dp"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:background="@color/primary"
            />
        <ImageView
            android:id="@+id/ic_letter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7月13号"
            android:textColor="@color/grey_400"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_layout"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_archive_layout"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动开发之开发工具篇"
            android:textColor="@color/grey_600"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个用于生成带有文本或者字母的图片的轻量级库。扩展自Drawable，因此可用于现有/自定义/网络等ImageView类，并且包含一个流接口用于创建drawables以及一个定制的ColorGenerator"
            android:ellipsize="end"
            android:textColor="@color/nav_drawer_inset_foreground"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:lines="2"
            />
    </LinearLayout>
</RelativeLayout>